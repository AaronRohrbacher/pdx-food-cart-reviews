
<div class="white-text">
<div class="container card-inverse" style="background-color: #333; border-color: #333; border-radius: 15px;">
  <br>
  <h1><%= @review.cart.name %></h1>
  <form action="/edit/<%=@review.id%>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label>Food: </label>
      <input name="food" class="form-control" type="text" value="<%= @review.food_name %>" required>
    </div>
    <div class="form-group">
      <label>Price: </label>
      <input name="price" class="form-control" type="text" value="<%= @review.price %>" required>
    </div>
    <div class="form-group">
      <label for="amount">Review: </label>
      <textarea class="form-control" name="review" rows="3"><%= @review.review %></textarea>
    </div>
    <br>
    <div class="stars">
      <% if @review.rating == 5 %>
        <input class="star star-5" id="star-5" value="5" type="radio" name="rating" checked>
      <% else %>
        <input class="star star-5" id="star-5" value="5" type="radio" name="rating">
      <% end %>
        <label class="star star-5" for="star-5"></label>
      <% if @review.rating == 4 %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating" checked>
        <% else %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating">
        <% end %>
        <label class="star star-4" for="star-4"></label>

        <% if @review.rating == 3 %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating" checked>
        <% else %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating">
        <% end %>
        <label class="star star-3" for="star-3"></label>

        <% if @review.rating == 2 %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating" checked>
        <% else %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating">
        <% end %>
        <label class="star star-2" for="star-2"></label>

        <% if @review.rating == 1 %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating" checked>
        <% else %>
          <input class="star star-5" id="star-5" value="5" type="radio" name="rating">
        <% end %>
        <label class="star star-1" for="star-1"></label>

    </div>
      <button class="btn btn-orange" type ="submit" style="float: right">Submit</button>
      <br>
      <br>

  </form>

</div>
</div>
