<!-- If there are any reviews for a given user then list them here -->
<% Time.zone = ActiveSupport::TimeZone.new('Pacific/Honolulu') %>
<% if @user.reviews.any? %>
  <ul>
    <% @user.reviews.each do |review| %>
      <li><a href="/cart/<%= review.cart.id %>"><%= review.cart.name %></a> | Updated <%= review.created_at.strftime("%m/%d/%Y") +  " at " + review.updated_at.strftime("%l:%M %p") %> <a href="/edit/<%= review.id %>">Update</a> <a href="/delete/<%= review.id %>">Delete</a></li>
    <% end %>
  </ul>
<% end %>
