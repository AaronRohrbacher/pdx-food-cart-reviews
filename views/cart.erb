<h1>Carts</h1>

<form action="/cart/:id" method="post">
  <div class="form-group">
    <label for="cart">Select an existing cart:</form>
    <select name="cart" class="form-control">
      <% @carts.each do |cart| %>
        <option value="<%= cart.id %>"><%=cart.name%></option>
      <%end%>
    </select>
  </div>
  <button class="btn btn-success" type="submit">Select</button>
</form>

<h3>OR</h3>

<form action="/cart/new">
  <div class="form-group">
    <label for="search">Enter a cart by name or by category:</label>
    <input class="form-control" name="search"></
  </div>
  <button class="btn btn-success" type="submit">Search</button>
</form>
