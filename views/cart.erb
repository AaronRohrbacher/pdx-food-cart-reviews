

<div class="container card-inverse" style="background-color: #333; border-color: #333; border-radius: 15px;">
<br>
<h1>Carts</h1>
  <form action="/cart/:id" method="post">
    <div class="form-group">
      <label for="cart" class="white-text">Select an existing cart:</label>
      <select name="cart" class="form-control">
        <% @carts.each do |cart| %>
          <option value="<%= cart.id %>"><%=cart.name%></option>
        <%end%>
      </select>
    </div>
    <button class="btn btn-orange white-text" type="submit">Select</button>
  </form>
  <br>
  <label for="seacg" class="white-text">Search all of Portland</label>
  <form action="/results" method="post">
    <div class="form-group">
      <input class="form-control" name="search" type="text"/>
    </div>
    <button class="btn btn-orange white-text" type="submit">Search</button>
  </form>
  <br><br>
</div>
